{
  "name": "playwrightshowcase",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "Run all tests": "npx playwright test",
    "Run all tests in Chromium": "npx playwright test --project=chromium",
    "Run all tests in Firefox": "npx playwright test --project=firefox",
    "Run all tests in Ms Edge": "npx playwright test --project=MsEdge",
    "Run all tests in WebKit": "npx playwright test --project=webkit",
    "Run all tests in stable browsers": "npx playwright test --project=chromium --project=MsEdge",
    "Show HTML Report": "npx playwright show-report",
    "Run all tests with allure": "npx playwright test --reporter=experimental-allure-playwright --project=chromium --project=MSEdge",
    "Build Allure Report from recent run": "npx allure generate ./allure-results --clean",
    "Open generated Allure Report": "npx allure open ./allure-report"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.30.0",
    "allure-commandline": "^2.20.1",
    "experimental-allure-playwright": "0.0.3"
  },
  "dependencies": {
    "dotenv": "^16.0.3"
  }
}
